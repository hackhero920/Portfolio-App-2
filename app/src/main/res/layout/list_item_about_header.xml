<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="header" type="me.tumur.portfolio.utils.adapters.listItemAdapters.about.AboutItem.Header"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_item_about_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorHeaderBackground"
            android:elevation="@dimen/dimen_2dp">

        <!-- About header title -->
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_list_item_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textAppearance="?attr/textAppearanceHeadline1"
                android:textAllCaps="true"
                android:textSize="@dimen/dimen_18sp"
                android:textColor="@color/colorHeaderTitle"
                android:text="@{header.header}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/cd_avatar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
