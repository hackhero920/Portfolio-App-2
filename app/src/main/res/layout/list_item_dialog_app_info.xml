<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
                name="model"
                type="me.tumur.portfolio.repository.database.model.settings.AppModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_item_dialog_app_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">

        <!-- App info dialog list item icon -->
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/list_item_dialog_app_info_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                app:appIcon="@{model.order}"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="0.10"
                app:layout_constraintBottom_toTopOf="@+id/list_item_dialog_app_info_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/list_item_dialog_app_info_text_content"
                tools:src="@drawable/ic_office"/>

        <!-- App info dialog list item text content -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/list_item_dialog_app_info_text_content"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintHorizontal_weight="0.90"
                app:layout_constraintBottom_toTopOf="@+id/list_item_dialog_app_info_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/list_item_dialog_app_info_icon"
                app:layout_constraintTop_toTopOf="parent">

            <!-- App info dialog list item title -->
            <TextView
                    android:id="@+id/list_item_dialog_app_info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorOnSurface"
                    android:text="@{model.title}"
                    app:layout_constraintBottom_toTopOf="@+id/list_item_dialog_app_info_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/cd_avatar"/>

            <!-- App info dialog list item text -->
            <TextView
                    android:id="@+id/list_item_dialog_app_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorOnSurfaceSecondary"
                    android:text="@{model.text}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/list_item_dialog_app_info_title"
                    tools:text="@string/cd_avatar"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- App info dialog list item divider -->
        <View
                android:id="@+id/list_item_dialog_app_info_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/colorPreferenceItemBorder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_dialog_app_info_text_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
